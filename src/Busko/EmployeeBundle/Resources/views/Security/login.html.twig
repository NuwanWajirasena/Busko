{% extends "BuskoStyleBundle:Home:basic.html.twig" %}
{% block login %}
{% endblock %}

{% block content %}

	<div class="container-fluid">
		<div class="row-fluid">
		
			<div class="row-fluid">
				<div class="span3 center login-header">
					<h2><img alt="Bus Ko Logo" src="{{asset('bundles/buskostyle/img/logo.png')}}" width="200" height="190"/></h2>
				</div><!--/span-->
			</div><!--/row-->
                        <br><br><br><br> <br><br><br>
			<div class="row-fluid">
				<div class="well span3 center login-box">
                                       
						<!-- Error Messages
                                                <div class="alert alert-info">
                                                   </div>
                                                -->
					
					<form class="form-horizontal" action="index.html" method="post">
						<fieldset>
							<div class="input-prepend" title="Username" data-rel="tooltip">
								<span class="add-on"><i class="icon-user"></i></span><input autofocus class="input-large span10" name="username" id="username" type="text" value="" placeholder="type your employee ID" />
							</div>
							<div class="clearfix"></div>

							<div class="input-prepend" title="Password" data-rel="tooltip">
								<span class="add-on"><i class="icon-lock"></i></span><input class="input-large span10" name="password" id="password" type="password" value="" placeholder="type your password" />
							</div>
							<div class="clearfix"></div>

							<div class="input-prepend">
							<label class="remember" for="remember"><input type="checkbox" id="remember" />Remember me</label>
							</div>
			

							<p class="center span5">
							<button type="submit" class="btn btn-primary">Login</button>
							</p>
						</fieldset>
					</form>
				</div><!--/span-->
			</div><!--/row-->
				</div><!--/fluid-row-->
		
	</div><!--/.fluid-container-->


{% endblock%}